## Manual management of external displays
# Set the shortcuts and what they do
set $mode_display Ext Screen: HDMI ON (h), HDMI OFF (o)
mode "$mode_display" {
#    bindsym v exec --no-startup-id xrandr --output eDP1 --auto --right-of LVDS1, mode "default"
    bindsym h exec --no-startup-id xrandr --output HDMI1 --auto --right-of eDP1, mode "default"
#    bindsym x exec --no-startup-id xrandr --output eDP1 --auto --off, mode "default"
    bindsym o exec --no-startup-id xrandr --output HDMI1 --auto --off, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Declare here the shortcut to bring the display selection menu
bindsym $mod+Shift+m mode "$mode_display"
